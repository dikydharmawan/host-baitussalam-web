{
    "version": 2,
    "functions": {
        "api/index.php": { "runtime": "vercel-php@0.7.1" }
    },
    "routes": [
        { "src": "/(css|js|images|favicon.ico)/(.*)", "dest": "/public/$1/$2" },
        { "src": "/(.*)", "dest": "/api/index.php" }
    ],
    "env": {
        "APP_ENV": "production",
        "APP_DEBUG": "true",
        "VIEW_COMPILED_PATH": "/tmp",
        "SESSION_DRIVER": "cookie"
    }
}